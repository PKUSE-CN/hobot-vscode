{
    "name": "hobot-vscode",
    "displayName": "库博软件成分分析与同源漏洞检测插件",
    "description": "库博软件成分分析及漏洞检测工具系统（又名COBOT-SCA）是由北京北大软件工程股份有限公司自主研发的一款用于检测C/C++/Java等100余种语言的源代码成分分析及漏洞检测平台。库博庞大的知识库以及智能代码分析算法，可以精准地分析出被测程序包含的组件信息，第一时间发现潜藏在程序中的安全漏洞，并为用户提出可靠的补救措施。",
    "version": "0.0.1",
    "publisher": "PKUSE",
    "engines": {
        "vscode": "^1.78.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onView:*"
    ],
    "main": "./dist/extension.js",
    "icon": "images/logo-cobot.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/PKUSE-CN/hobot-vscode"
    },
    "contributes": {
        "commands": [
            {
                "command": "hobot-vscode.checkResult.refresh",
                "category": "库博软件成分分析与同源漏洞检测工具",
                "title": "刷新检测结果",
                "icon": "$(refresh)"
            },
            {
                "command": "hobot-vscode.checkResult.showBugs",
                "title": "获取组件漏洞",
                "icon": "$(bug)"
            },
            {
                "command": "hobot-vscode.checkResult.listTree",
                "title": "树形展开",
                "icon": "$(list-tree)"
            },
            {
                "command": "hobot-vscode.checkResult.listFlat",
                "title": "平铺",
                "icon": "$(list-flat)"
            },
            {
                "command": "hobot-vscode.checkResult.checkFolder",
                "title": "hobot: 检测当前文件夹"
            },
            {
                "command": "hobot-vscode.checkResult.checkWorkSpaceProject",
                "title": "hobot: 检测当前工作空间项目"
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "hobot",
                    "title": "库博软件成分分析与同源漏洞检测工具",
                    "icon": "images/cobot_logo_svg.svg"
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "hobot-vscode.checkResult.refresh",
                    "when": "view == checkResult",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "hobot-vscode.checkResult.showBugs",
                    "when": "view == checkResult && viewItem == hasBug",
                    "group": "inline"
                }
            ],
            "explorer/context": [
                {
                    "command": "hobot-vscode.checkResult.checkFolder",
                    "group": "menu",
                    "when": "explorerResourceIsFolder"
                },
                {
                    "command": "hobot-vscode.checkResult.checkWorkSpaceProject",
                    "group": "menu"
                }
            ]
        },
        "views": {
            "hobot": [
                {
                    "id": "checkResult",
                    "name": "包含组件"
                },
                {
                    "id": "moduleBugs",
                    "name": "组件漏洞（请在检测结果中选择组件以查看漏洞）",
                    "visibility": "collapsed"
                }
            ]
        },
        "configuration": {
            "title": "库博软件成分分析与同源漏洞检测工具",
            "properties": {
                "hobot-vscode.url": {
                    "type": "string",
                    "default": "",
                    "format": "uri",
                    "description": "库博软件成分分析与同源漏洞检测工具服务端地址"
                },
                "hobot-vscode.token": {
                    "type": "string",
                    "default": "",
                    "description": "库博软件成分分析与同源漏洞检测工具密钥"
                },
                "hobot-vscode.projectName": {
                    "type": "string",
                    "default": "",
                    "description": "当前检测项目名称"
                },
                "hobot-vscode.projectPath": {
                    "type": "string",
                    "default": "",
                    "description": "当前检测项目路径"
                }
            }
        },
        "colors": [
            {
                "id": "level.high",
                "description": "漏洞严重等级颜色: 高危",
                "defaults": {
                    "dark": "#C82B33",
                    "light": "#C82B33"
                }
            },
            {
                "id": "level.mid",
                "description": "漏洞严重等级颜色: 中危",
                "defaults": {
                    "dark": "#FE7178",
                    "light": "#FE7178"
                }
            },
            {
                "id": "level.low",
                "description": "漏洞严重等级颜色: 低危",
                "defaults": {
                    "dark": "#FF989E",
                    "light": "#FF989E"
                }
            },
            {
                "id": "level.other",
                "description": "漏洞严重等级颜色: 其他",
                "defaults": {
                    "dark": "#A89595",
                    "light": "#A89595"
                }
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run package",
        "compile": "webpack",
        "watch": "webpack --watch",
        "package": "webpack --mode production --devtool hidden-source-map",
        "compile-tests": "tsc -p . --outDir out",
        "watch-tests": "tsc -p . -w --outDir out",
        "pretest": "npm run compile-tests && npm run compile && npm run lint",
        "lint": "eslint src --ext ts",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/archiver": "^5.3.2",
        "@types/glob": "^8.1.0",
        "@types/humanize-duration": "^3.27.1",
        "@types/mocha": "^10.0.1",
        "@types/node": "16.x",
        "@types/tmp": "^0.2.3",
        "@types/vscode": "^1.78.0",
        "@types/ws": "^8.5.5",
        "@typescript-eslint/eslint-plugin": "^5.56.0",
        "@typescript-eslint/parser": "^5.56.0",
        "@vscode/test-electron": "^2.3.0",
        "eslint": "^8.36.0",
        "glob": "^8.1.0",
        "mocha": "^10.2.0",
        "ts-loader": "^9.4.2",
        "typescript": "^4.9.5",
        "webpack": "^5.76.3",
        "webpack-cli": "^5.0.1"
    },
    "dependencies": {
        "archiver": "^5.3.1",
        "axios": "^1.4.0",
        "bufferutil": "^4.0.7",
        "form-data": "^4.0.0",
        "humanize-duration": "^3.28.0",
        "tmp": "^0.2.1",
        "utf-8-validate": "^6.0.3",
        "ws": "^8.13.0"
    }
}
